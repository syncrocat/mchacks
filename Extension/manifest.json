{
  "manifest_version": 2,

  "name": "hack",
  "description": "idk yet",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"],
      "run_at": "document_end",
      "css": ["contentscript.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
