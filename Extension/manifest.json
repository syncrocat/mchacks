{
  "manifest_version": 2,

  "name": "FreeDOM",
  "description": "Set your inner HTMLove free!",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon-small.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"],
      "run_at": "document_end",
      "css": ["contentscript.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon-bitty.png",
    "32": "icon-small.png"
  }
}
